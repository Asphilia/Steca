#!/usr/bin/env python3

import re, sys

################################################################################
helptext = """Usage: %s <file>

Strips time stamps and comment lines from Steca log file.

Reads <file>, writes to stdout.
""" % sys.argv[0]
################################################################################

def striplog(path):
    # read in
    path = re.sub( r'^\./', '', path )
    fd = open( path, 'r' )
    ta = fd.read()
    fd.close

    t = re.sub( r'^\[[^\]]*\](.*)$', r'\1', t )
    t = re.sub( r'^#(.*)$\n', r'', t )

    sys.stdout.write(t)


if __name__ == "__main__":

    if len(sys.argv)!=2 or sys.argv[1]=="-h":
        print(helptext)
        sys.exit(0)

    striplog(sys.argv[1])
